{
    "env": {
        "mocha": true, // for test files
        "truffle/globals": true, // same as "truffle/truffle": true
        "es6": true
    },
    "plugins": [
        "truffle"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2017
    }
}